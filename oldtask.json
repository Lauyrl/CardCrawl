{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build SDL App",
            "command": "g++.exe",
            "args": [
                "--std=c++23",
                "-g",

                "${workspaceFolder}/source/main.cpp",
                "${workspaceFolder}/source/cards/card.cpp",
                "${workspaceFolder}/source/cards/deck.cpp",
                "${workspaceFolder}/source/cards/id_to_sprite.cpp",
                "${workspaceFolder}/source/character/character.cpp",
                "${workspaceFolder}/source/draw/cursor_sprite.cpp",
                "${workspaceFolder}/source/draw/renderer.cpp",
                "${workspaceFolder}/source/draw/window.cpp",
                "${workspaceFolder}/source/gui/input/input_manager.cpp",
                "${workspaceFolder}/source/gui/input/cursor_variables.cpp",
                "${workspaceFolder}/source/gui/gui.cpp",
                "${workspaceFolder}/source/state/battle.cpp",
                "${workspaceFolder}/source/state/game_state_variables.cpp",
                "${workspaceFolder}/source/game.cpp",

                "-o",
                "C:/CS/CardCrawl/bin/MyGame.exe",

                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_ttf",
                "-lSDL2_image",
                "-lSDL2_mixer",
                "-mwindows",
                "-Wextra",
                "-Wall",
                "-Weffc++",
                "-Wconversion",
                "-pedantic-errors",
                "-Wsign-conversion"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "C:/CS/msys2/ucrt64/bin;${env:PATH}"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger (modified to compile all .cpp files)."
        }
    ]
}
