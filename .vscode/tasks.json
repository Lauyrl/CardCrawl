{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug"
                ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
                }
        },
        {
            "label": "Build SDL App",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build"
                ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                   "PATH": "C:/CS/msys2/ucrt64/bin;${env:PATH}"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task to build using CMake."
        }
    ]
}
